/* ============================================
   BeaconatorC2 Qt Stylesheet
   ============================================

   This stylesheet provides a centralized dark theme
   for the entire BeaconatorC2 application.

   To apply object-specific styles, use setObjectName()
   in Python code, then reference with Widget#objectName

   Example:
       button.setObjectName("primaryButton")
       // Styled by: QPushButton#primaryButton { ... }
*/


/* ============================================
   COLOR PALETTE
   ============================================

   Background Colors:
   ------------------
   BG_DARKEST:      #232323
   BG_DARKER:       #2a2a2a
   BG_DARK:         #2b2b2b
   BG_MEDIUM_DARK:  #353535
   BG_MEDIUM:       #404040
   BG_LIGHT:        #424242
   BG_LIGHTER:      #555555

   Border Colors:
   --------------
   BORDER_DARK:     #555555
   BORDER_MEDIUM:   #666666
   BORDER_LIGHT:    #888888

   Text Colors:
   ------------
   TEXT_WHITE:      #ffffff
   TEXT_LIGHT:      #e0e0e0
   TEXT_MEDIUM:     #cccccc
   TEXT_DIM:        #999999
   TEXT_DIMMER:     #888888
   TEXT_DARK:       #666666

   Accent Colors:
   --------------
   ACCENT_BLUE:         #4a90e2
   ACCENT_BLUE_BRIGHT:  #2196F3
   ACCENT_BLUE_HOVER:   #5a9ff2
   ACCENT_BLUE_DARK:    #1976D2
   ACCENT_BLUE_DARKER:  #3a80d2

   ACCENT_GREEN:        #4caf50
   ACCENT_GREEN_HOVER:  #45a049
   ACCENT_GREEN_DARK:   #3d8b40

   ACCENT_RED:          #d32f2f
   ACCENT_RED_HOVER:    #f44336
   ACCENT_RED_DARK:     #b71c1c

   Status Colors:
   --------------
   STATUS_ERROR:    #ff6666
   STATUS_WARNING:  #ff9999
   STATUS_SUCCESS:  #4CAF50
   STATUS_INFO:     #4a90e2
*/


/* ============================================
   BUTTON STYLES
   ============================================ */

/* Primary Button */
QPushButton#primaryButton {
    background-color: #2196F3;
    border: none;
    color: white;
    font-size: 11px;
    font-weight: bold;
    border-radius: 4px;
}

QPushButton#primaryButton:hover {
    background-color: #1976D2;
}

QPushButton#primaryButton:disabled {
    background-color: #666666;
    color: #999999;
}

/* Danger Button */
