    background-color: #888888;
}

/* Bordered ScrollArea */
QScrollArea#borderedScrollArea {
    background-color: #232323;
    border: 1px solid #666666;
    border-radius: 5px;
}

/* Transparent ScrollArea */
QScrollArea#transparentScrollArea {
    background-color: transparent;
    border: none;
}

/* Transparent Bordered ScrollArea */
QScrollArea#transparentBorderedScrollArea {
    background-color: transparent;
    border: 1px solid #555555;
    border-radius: 3px;
}


/* ============================================
   GROUPBOX STYLES
   ============================================ */

/* Standard GroupBox */
QGroupBox#standardGroupBox {
    color: white;
    font-weight: bold;
    border: 1px solid #555555;
    border-radius: 3px;
    margin-top: 10px;
    padding-top: 10px;
}

QGroupBox#standardGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}

/* Config Group */
QGroupBox#configGroup {
    font-weight: bold;
    border: 1px solid #555555;
    border-radius: 5px;
    margin-top: 0.5em;
    color: white;
}

QGroupBox#configGroup::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}

/* Config Group Disabled */
QGroupBox#configGroupDisabled {
    font-weight: bold;
    border: 1px solid #555555;
    border-radius: 5px;
    margin-top: 0.5em;
    color: #888888;
}

QGroupBox#configGroupDisabled::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}

/* Stats Group */
QGroupBox#statsGroup {
    font-weight: bold;
    border: 1px solid #555555;
    border-radius: 5px;
    margin-top: 0.5em;
    color: white;
    background-color: #2a2a2a;
}

QGroupBox#statsGroup::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}


/* ============================================
   PROGRESSBAR STYLES
   ============================================ */

/* Standard ProgressBar */
QProgressBar#standardProgressBar {
    border: 1px solid grey;
    border-radius: 3px;
    text-align: center;
}

QProgressBar#standardProgressBar::chunk {
    background-color: #4a90e2;
    border-radius: 2px;
}


/* ============================================
   CARD/WIDGET STYLES
   ============================================ */

/* Hoverable Card */
QWidget#hoverableCard {
    background-color: transparent;
    border-radius: 4px;
    margin: 1px;
}

QWidget#hoverableCard:hover {
    background-color: #555555;
}

/* Selected Card */
QWidget#selectedCard {
    background-color: #4a90e2;
    border-radius: 4px;
    margin: 1px;
}

QWidget#selectedCard:hover {
    background-color: #5a9ff2;
}


/* ============================================
   RADIOBUTTON STYLES
   ============================================ */

/* Standard RadioButton */
QRadioButton#standardRadioButton {
    color: white;
    font-size: 12px;
}


/* ============================================
   TABLEWIDGET STYLES
   ============================================ */

/* Workflow Table */
QTableWidget#workflowTable {
    background-color: #2b2b2b;
    gridline-color: #404040;
    color: white;
}

QTableWidget#workflowTable::item {
    padding: 5px;
}

QTableWidget#workflowTable::item:selected {
    background-color: #4a90e2;
}

QTableWidget#workflowTable QHeaderView::section {
    background-color: #333;
    color: white;
    padding: 5px;
    border: 1px solid #404040;
    font-weight: bold;
}


/* ============================================
   WIDGET CONTAINER STYLES
   ============================================ */

/* Content Panel Widget */
QWidget#contentPanelWidget {
    background-color: #2b2b2b;
    border: none;
}

/* Content Frame */
QFrame#contentFrame {
    background-color: #2b2b2b;
    border: none;
}

/* Stacked Widget */
QStackedWidget#stackedWidget {
    background-color: #2b2b2b;
    border: none;
}


/* ============================================
   DIALOG STYLES
   ============================================ */

/* Terminal Dialog */
QDialog#terminalDialog {
    background-color: rgb(30, 30, 30);
    color: white;
}

QDialog#terminalDialog QPlainTextEdit {
    background-color: rgb(20, 20, 20);
    color: #00ff00;
    border: 1px solid #666666;
    border-radius: 3px;
    padding: 5px;
    selection-background-color: #4a4a4a;
}

QDialog#terminalDialog QLineEdit {
    background-color: #353535;
    color: white;
    border: 1px solid #666666;
    border-radius: 3px;
    padding: 3px;
}

QDialog#terminalDialog QLineEdit:focus {
    border: 1px solid #888888;
}

QDialog#terminalDialog QLabel {
    color: #cccccc;
}

QDialog#terminalDialog QPushButton {
    background-color: rgb(45, 45, 45);
    color: white;
    border: 1px solid #666666;
    border-radius: 3px;
    padding: 5px 10px;
    min-width: 60px;
}

QDialog#terminalDialog QPushButton:hover {
    background-color: rgb(55, 55, 55);
}

QDialog#terminalDialog QPushButton:pressed {
    background-color: #353535;
}

QDialog#terminalDialog QPushButton:disabled {
    background-color: rgb(25, 25, 25);
    color: #666666;
}

QDialog#terminalDialog QFrame {
    background-color: rgb(40, 40, 40);
    border: 1px solid #555555;
    border-radius: 3px;
}

/* Config Dialog - For receiver and other configuration dialogs */
QDialog#configDialog {
    border: 2px solid #888888;
    background-color: #353535;
}

QDialog#configDialog QLineEdit,
QDialog#configDialog QSpinBox,
QDialog#configDialog QComboBox,
QDialog#configDialog QTextEdit {
    border: 1px solid #666666;
    border-radius: 3px;
    padding: 3px;
    background-color: #232323;
    color: white;
}

QDialog#configDialog QLineEdit:focus,
QDialog#configDialog QSpinBox:focus,
QDialog#configDialog QComboBox:focus,
QDialog#configDialog QTextEdit:focus {
    border: 1px solid #888888;
}

/* Form Group Box - For form sections in dialogs */
QGroupBox#formGroupBox {
    border: 1px solid #666666;
    border-radius: 5px;
    background-color: #232323;
    color: white;
    font-weight: bold;
    margin-top: 0.5em;
}

QGroupBox#formGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}
